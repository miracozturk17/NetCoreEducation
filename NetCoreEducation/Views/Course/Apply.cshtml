@model Student
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <title>Apply</title>
</head>
<body>
    <br />
    <div class="container m-4">
        <div class="card mx-auto" style="width: 500px;">
            <div class="card-header">
                <h3>Başvuru Formu</h3>
            </div>
            <div class="card-body">
                <div style="align-items: center;animation: ease">
                    <form asp-action="apply">
                        <div asp-validation-summary="All"></div>
                        <div class="form-group">
                            <label asp-for="Name">Adınız</label>
                            <input asp-for="Name" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="SurName">Soyadınız</label>
                            <input asp-for="SurName" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">E-Posta</label>
                            <input asp-for="Email" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone">Telefon</label>
                            <input asp-for="Phone" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Confirm">Kursa katılacak mısınız?</label>
                            <select asp-for="Confirm" class="form-control">
                                <option value="">Seçiniz</option>
                                <option value="true">Evet,geliyorum.</option>
                                <option value="false">Hayır,gelmiyorum.</option>
                            </select>
                        </div>
                        <input type="submit" value="Kayıt" class="btn btn-primary btn-block">
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>